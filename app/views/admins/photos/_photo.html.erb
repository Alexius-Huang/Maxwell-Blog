<div class="panel-body" id="parse-photo">
	<p><%= image_tag photo.url, :style => "float: left; max-width: 200px; margin-right: 15px" %></p>
	<p><%= html_icon("paperclip") %> <%= link_to photo.title, photo_path(photo) %>, created <%= time_ago(photo) %> ago.</p>
	<p><%= markdown(truncate(photo.description, length: 100)) %>
	<%= link_to edit_button("Photo"), edit_photo_path(photo), :class => "btn btn-xs pull-right btn-custom" %>
	<%= link_to destroy_button("Photo"), photo_path(photo), method: :delete, :class => "btn btn-xs pull-right btn-offset"  %>
</div>