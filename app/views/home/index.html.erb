<div class="heading">
	<h1><span>Maxwell's Home</span></h1>
</div>

<div class="small-gap"></div>

<div class="row">
	
	<div class="col-md-3" style="margin-left: 170px;">
		<div class="panel">
			<div class="panel-heading"><%= html_icon("knight") %> About Me</div>
			<div class="panel-body panel-scrolling-about"><%= render 'home/about', author: Admin.first %></div>
		</div>
	</div>
	
	<div class="row">
		<div class="col-md-3">
			<div class="panel">
				<div class="panel-heading"><%= html_icon("file") %> Articles Update</div>
				<div class="panel-body panel-scrolling-origin"><%= render 'articles/update_content' %></div>
			</div>
		</div>

		<div class="col-md-3">
			<div class="panel">
				<div class="panel-heading"><%= html_icon("picture") %> Photos &amp Artworks Update </div>
				<div class="panel-body panel-scrolling-origin"><%= render 'photos/update_content' %></div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-3" style="max-width: 368px">
				<div class="panel">
					<div class="panel-heading"><%= html_icon("console") %> Computer Science </div>
					<div class="panel-body panel-scrolling-origin"> Website Under Construction </div>
				</div>
			</div>

			<div class="col-md-3" style="max-width: 368px">
				<div class="panel">
					<div class="panel-heading"><%= html_icon("envelope") %> Contact Me?</div>
					<div class="panel-body panel-scrolling-origin" style="min-height: 187px"><%= render 'home/contact' %></div>
				</div>
			</div>
		</div>
	</div>

</div>

