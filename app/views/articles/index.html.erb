<div class="heading">
	<%= link_to back_button(nil), root_path, :class => "btn btn-custom btn-md pull-right" %>
	<% if admin_signed_in? %>
		<%= link_to new_button("Article"), new_article_path, :class => "btn btn-offset btn-custom btn-md pull-right" %>
	<% end %>
</div>

<div class="small-gap"></div>

<div class="row" style="clear:both">
	<div class="col-md-2">
		<div class="side-list">
			<div class="panel-heading panel-top-offset">Lists of Articles</div>
			<% Article.order("created_at DESC").each do |article| %>
				<div class="panel-body"><%= link_to article.title, article_path(article) %></div>
			<% end %>
		</div>
	</div>

	<div class="col-md-10">
		<div class="panel-heading panel-top-offset"><%= html_icon("file") %> Maxwell's Life Experience </div>
		<div style="margin-top: 10px"></div>
		<div id="articles">
			<div id="wrapper">
				<div id="list"><%= render @articles %></div>
			</div>
		</div>
	</div>
</div>