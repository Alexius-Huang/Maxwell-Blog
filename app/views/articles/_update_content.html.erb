<% Article.order('created_at DESC').each.with_index do |article, index| %>
	<% if index + 1 > 5 %>
		<% break %>
	<% end %>

	<div class="panel-body">
		<p> 
			<span class="glyphicon glyphicon-hand-right"></span> <%= link_to article.title, article_path(article) %> <br>
			created <%= time_ago(article) %>
		</p>
	</div>
<% end %>
<%= link_to "Articles", articles_path, :class => "btn pull-right btn-index" %>