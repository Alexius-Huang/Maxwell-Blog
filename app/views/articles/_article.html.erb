<script src="https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js"></script>

<div class="panel-body article-custom item" >
	
			<%= image_tag article.image_url, :style => "max-width: 95%; display:block; margin: 0 auto" %>
			<hr>
			<p style="display: block; margin: 0 auto; max-width: 90%; "><%= html_icon("hand-right") %> <%= link_to article.title, article_path(article) %>, updated <%= time_ago(article) %> ago.</p>
			<hr>
			<div class="markdown">
				<div class="index-format">
					<p><%= markdown(truncate(article.description, length: 500)) %></p>
				</div>
			</div>
			<hr>
				<%= link_to html_icon("eye-open") + "Read more", article_path(article), :class => "btn btn-xs pull-right btn-custom" %>

			<% if admin_signed_in? %>
				
				<%= link_to edit_button("Article"), edit_article_path(article), :class => "btn btn-xs pull-right btn-custom" %>
				<%= link_to destroy_button("Article"), article_path(article), method: :delete, :class => "btn btn-xs pull-right btn-offset"  %>
			<% end %>

</div>