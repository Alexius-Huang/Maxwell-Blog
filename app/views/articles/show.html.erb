<div class="heading">
	<%= link_to "Back", articles_path, :class => "btn btn-custom btn-md pull-right" %>
</div>

<div class="small-gap"></div>

    <script src="https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js"></script>

<div class="col-md-offset-1 col-md-6" >
	<div style="margin-left: 50px;">
		<div class="panel-heading panel-top-offset"><%= @article.title %> <span class="pull-right">Created <%= time_ago_in_words(@article.created_at) %> ago.</</span></div>
		<div class="panel-body panel-scrolling-big custom-format"><%= markdown(@article.description) %></div>
		<div class="panel-body" id="comment-heading">Add a Comments?</div>
		<div class="panel-body panel-scrolling-small" id="comments">Website Under Constuction</div>
	</div>
</div>