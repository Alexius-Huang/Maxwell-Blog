<script src="https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js"></script>

<div class="panel-body article-custom" id="parse-article">
	<p style="margin-top: 10px;"><%= html_icon("hand-right") %> <%= link_to programming_experience.title, programming_experience_path(programming_experience) %>, updated <%= time_ago(programming_experience) %> ago.</p>
	<div class="markdown">
		<p class="markdown"><%= markdown(truncate(programming_experience.description, length: 500)) %></p>
	</div>
	<% if admin_signed_in? %>
		<%= link_to edit_button("Programming Experience"), edit_programming_experience_path(programming_experience), :class => "btn btn-xs pull-right btn-custom" %>
		<%= link_to destroy_button("Programming Experience"), programming_experience_path(programming_experience), method: :delete, :class => "btn btn-xs pull-right btn-offset"  %>
	<% end %>
</div>