<div class="heading">
	<%= link_to back_button(nil), root_path, :class => "btn btn-custom btn-md pull-right" %>
</div>

<div style="margin-bottom: 200px;"></div>

<div class="col-md-offset-1 col-md-6" >
	<div style="margin-left: 50px;">
		<div class="panel-heading panel-top-offset"><%= html_icon("lock") %> Author Sign In</div>
		<div class="panel-body panel-scrolling-origin">

			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			  <div class="form-inputs">
			    <%= f.input :email, required: false, autofocus: true, input_html: { :class => "form-control" } %>
			    <%= f.input :password, required: false, input_html: { :class => "form-control" }  %>
			  </div>

			  <div class="form-actions">
			    <%= f.button :submit, "Log in", :class => "btn btn-primary pull-right", data: { disable_with: "Submitting..." } %>
			  </div>
			<% end %>
		</div>
	</div>
</div>

