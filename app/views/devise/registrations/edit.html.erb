<div class="heading">
  <%= link_to back_button(nil), root_path, :class => "btn btn-custom btn-md pull-right" %>
</div>

<div class="small-gap"></div>

<div class="col-md-offset-1 col-md-6" >
  <div style="margin-left: 50px;">
    <div class="panel-heading panel-top-offset"><%= html_icon("lock") %> Edit Author Profile</div>
    
    <div class="panel-body" style="background-color: rgba(255,255,255,0.5);">
      <ul class="nav nav-tabs nav-justified">
        <li role="presentation" class="active"><a href="#"><%= html_icon("user") %> Edit Author Account</a></li>
        <li role="presentation" class="inactive"><%= link_to html_icon("file") + " Articles", admins_manage_articles_path %></li>
        <li role="presentation" class="inactive"><%= link_to html_icon("picture") + "Photos & Artworks", admins_manage_photos_path %></li>
      </ul>  
    </div>

    <div class="panel-body panel-scrolling-big">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true, input_html: { :class => "form-control", :style => "background-color: transparent" } %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password, autocomplete: "off", hint: "Leave it blank if you don't want to change it", required: false, input_html: { :class => "form-control", :style => "background-color: transparent" } %>
          <%= f.input :password_confirmation, required: false, input_html: { :class => "form-control", :style => "background-color: transparent" } %>
          <%= f.input :current_password, hint: "Needed current password to confirm your changes", required: true, input_html: { :class => "form-control", :style => "background-color: transparent" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update", :class => "btn btn-primary pull-right", data: { disable_with: "Submitting..." } %>
        </div>
      <% end %>
    </div>
  </div>
</div>