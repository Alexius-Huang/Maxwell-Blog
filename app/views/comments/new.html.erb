<h1>New Comments</h1>

<%= simple_form_for [@commentable, @comment] do |f| %>
	<div class="form-group">
		<%= f.input :name, input_html: { :class => "form-control" } %>
		<%= f.input :content, input_html: { :class => "form-control" } %>
	</div>
	<%= f.submit "Submit", data: { disable_with: "Submitting..." } %>
<% end %>