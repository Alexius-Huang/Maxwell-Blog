<div class="heading">
	<%= link_to "Back", photos_path, :class => "btn btn-custom btn-md pull-right" %>
	<h1><span>New Photo or Artwork</span></h1>
</div>

<div class="small-gap"></div>

<div class="col-md-offset-1 col-md-6" >
	<div style="margin-left: 50px;">
		<%= simple_form_for @photo do |f| %>
			<div class="form-group">
				<%= f.input :title, input_html: { :class => "form-control" } %>
				<%= f.input :description, input_html: { :class => "form-control" } %>
  			<%= f.input :image_file, as: :file, input_html: { :class => "form-control" } %>
			</div>
			<%= f.submit "Submit", :class => "btn btn-primary pull-right", data: { disable_with: "Submitting..." } %>
		<% end %>
	</div>
</div>