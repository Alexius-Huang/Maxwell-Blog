@import 'bootstrap-sprockets';
@import 'bootstrap';

$ultra-light: 					rgb(179,219,249);
$light: 								rgb(93,177,240);
$origin: 								rgb(0,140,244);
$medium:								rgb(14,110,182);
$dark:									rgb(0,90,194);

$pure:									rgb(255,255,255);
$pure-light:						rgba(255,255,255,0.5);
$pure-strong:						rgba(255,255,255,0.8);
$pure-ex-strong: 				rgba(255,255,255,0.9);

$light-alpha-light: 		rgba(93,177,240,0.5);
$light-alpha-strong: 		rgba(93,177,240,0.8);
$origin-alpha-light: 		rgba(0,140,244,0.5);
$origin-alpha-strong: 	rgba(0,140,244,0.8);
$medium-alpha-light: 		rgba(14,110,182,0.5);
$medium-alpha-strong: 	rgba(14,110,182,0.8);
$dark-alpha-light: 			rgba(0,90,194, 0.5);
$dark-alpha-strong:			rgba(0,90,194,0.8);

$transparent: rgba(0,0,0,0);

@mixin scrolling($height) {
	min-height: $height;
  max-height: $height;
  overflow-y: scroll;
}

@mixin img-size($width,$height) {
	width: $width;
	height: $height;
}

body {
	
	background-image: url(<%= asset_path 'background.png' %>);
	background-repeat: no-repeat;
	background-attachment: fixed;
	-webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;

	margin: 0;
	font-family: Helvetica;

/* Navbar */

	div.navbar-custom {
		margin-bottom: 10px;
		background-color: $dark-alpha-light;
		padding: 8px;
		color: $pure;

		a.navbar-home {
			color: $pure-strong;
			font-size: 150%;
			margin: 3px;
			padding: 3px;
		}

		a.navbar-home:hover {
			color: $pure;
			text-decoration: none;
		}

		ul {
			margin: 5px;

			li { 
				margin: 0px 10px;
				display: inline;
				
				a {
					color: $pure-light;
					font-size: 110%;
				}

				a:hover {
					color: $pure;
					text-decoration: none;
				}
			}
		}
	}

	div.navbar-custom:hover {
		background-color: $dark-alpha-strong;
	}

/* Nav-tabs */

	ul.nav-tabs {
		li.inactive {
			a {
				color: $dark-alpha-light;
			}

			a:hover {
				color: $dark-alpha-strong;
				background-color: $pure-strong;
			}
		}
	}

/* Heading */

	div.heading {
		display: block;
		color: $dark-alpha-strong;
		font-variant: small-caps;
		
		h1 {
			margin: 20px 50px;
			padding: 5px;
			text-align: center;
		}

		a.btn {
			color: $dark-alpha-light;
			background-color: $pure-light;
			margin-top: 10px;
			margin-right: 10px;
		}

		a.btn:hover {
			color: $dark-alpha-strong;
			background-color: $pure-strong;
		}
	}

/* Optional */

	div.small-gap {
		margin-bottom: 25px;
	}

	a.non-active {
		pointer-events: none;
   	cursor: default;
	}

	a.btn-offset {
		margin: 0px 5px;
	}

/* Panel */

	div.panel {
		background-color: $transparent;
	}

	div.panel-heading {
		color: $pure;
		background-color: $dark-alpha-light;
		border-top-left-radius: 10px;
		border-top-right-radius: 10px;
	}

	div.panel-heading:hover {
		background-color: $dark-alpha-strong;
	}

	div.panel-body {
		color: $dark;
		background-color: $pure-light;
		
		a.custom {
			color: $dark-alpha-light;
			margin-left: 5px;
		}

		a.custom:hover {
			color: $dark-alpha-strong;
			text-decoration: none;
		}

		a.btn-index {
			margin-top: 15px;
			color: $pure;
			background-color: $dark-alpha-light;
		}

		a.btn-index:hover {
			color: $pure;
			background-color: $dark-alpha-strong;
		}

		a.btn-show {
			color: $pure;
		}
	}

	div.panel-body:hover {
		background-color: $pure-ex-strong;
	}

	div.panel-top-offset {
		margin-top: 30px;
	}

	div.panel-scrolling-huge 		{ @include scrolling(550px); }
	div.panel-scrolling-big 		{ @include scrolling(500px); }
	div.panel-scrolling-medium 	{ @include scrolling(380px); }
	div.panel-scrolling-origin 	{ @include scrolling(250px); }
	div.panel-scrolling-small 	{ @include scrolling(150px); }

	/* Logo Part */

	div.fb-logo {
		img {
			@include img-size(30px, 30px);
			margin-right: 7px;
			margin-left: 3px;
		}
	}

	div.github-logo {
		img {
			@include img-size(40px, 30px);
		}
	}

	div.gmail-logo {
		img {
			@include img-size(35px, 30px);
			margin-left: 3px;
			margin-right: 3px;
		}
	}
	
	div.yahoo-logo {
		img {
			@include img-size(100px, 20px);
		}
	}

	div.LINE-logo {
		img {
			@include img-size(40px, 40px);
		}
	}

	div#comment-heading {
		background-color: $dark-alpha-light;
		color: $pure;
		padding: 8px;
		padding-left: 18px;
	}

	div#comment-heading:hover {
		background-color: $dark-alpha-strong;
	}

	.article-custom {

		padding-top: 0;
		padding-left: 20px;
		
		pre {
			border: none;
			background-color: $transparent;
		}
	} 

/* Footer */

	footer {
		display: block;
		position: absolute;
		bottom: 0;
		margin: 30px;

		a {
		color: $pure;
		}

		a:hover {
			color: $dark;
			text-decoration: none;
		}
	}

}
