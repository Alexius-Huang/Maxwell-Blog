@import 'bootstrap-sprockets';
@import 'bootstrap';

$ultra-light: 					rgb(179,219,249);
$light: 								rgb(93,177,240);
$origin: 								rgb(0,140,244);
$medium:								rgb(14,110,182);
$dark:									rgb(0,90,194);

$pure:									rgb(255,255,255);
$pure-light:						rgba(255,255,255,0.5);
$pure-strong:						rgba(255,255,255,0.8);
$pure-ex-strong: 				rgba(255,255,255,0.9);

$light-alpha-light: 		rgba(93,177,240,0.5);
$light-alpha-strong: 		rgba(93,177,240,0.8);
$origin-alpha-light: 		rgba(0,140,244,0.5);
$origin-alpha-strong: 	rgba(0,140,244,0.8);
$medium-alpha-light: 		rgba(14,110,182,0.5);
$medium-alpha-strong: 	rgba(14,110,182,0.8);
$dark-alpha-light: 			rgba(0,90,194, 0.5);
$dark-alpha-strong:			rgba(0,90,194,0.8);

$transparent: rgba(0,0,0,0);

body {
	
	background-image: url(<%= asset_path 'background.png' %>);
	background-repeat: no-repeat;
	background-attachment: fixed;
	-webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;

	margin: 0;
	font-family: Helvetica;

/* Navbar */

	div.navbar-custom {
		margin-bottom: 10px;
		background-color: $dark-alpha-light;
		padding: 8px;
		color: $pure;

		a.navbar-home {
			color: $pure-strong;
			font-size: 150%;
			margin: 3px;
			padding: 3px;
		}

		a.navbar-home:hover {
			color: $pure;
			text-decoration: none;
		}

		ul {
			margin: 5px;

			li { 
				margin: 0px 10px;
				display: inline;
				
				a {
					color: $pure-light;
					font-size: 110%;
				}

				a:hover {
					color: $pure;
					text-decoration: none;
				}
			}
		}
	}

	div.navbar-custom:hover {
		background-color: $dark-alpha-strong;
	}

/* Heading */

	div.heading {
		display: block;
		color: $dark-alpha-strong;
		font-variant: small-caps;
		
		h1 {
			margin: 20px 50px;
			padding: 5px;
			text-align: center;
		}

		a.btn {
			color: $dark-alpha-light;
			background-color: $pure-light;
		}

		a.btn:hover {
			color: $dark-alpha-strong;
			background-color: $pure-strong;
		}
	}

/* Optional */

	div.small-gap {
		margin-bottom: 25px;
	}

/* Panel */

	div.panel {
		background-color: $transparent;
	}

	div.panel-heading {
		color: $pure;
		background-color: $dark-alpha-light;
		border-top-left-radius: 10px;
		border-top-right-radius: 10px;
	}

	div.panel-heading:hover {
		background-color: $dark-alpha-strong;
	}

	div.panel-body {
		color: $dark;
		background-color: $pure-light;
		
		a.btn-index {
			margin-top: 15px;
			color: $pure;
			background-color: $dark-alpha-light;
		}

		a.btn-index:hover {
			color: $pure;
			background-color: $dark-alpha-strong;
		}
	}

	div.panel-body:hover {
		background-color: $pure-ex-strong;
	}

	div.panel-scrolling-big {
		min-height: 500px;
  	max-height: 500px;
  	overflow-y: scroll;
	}

	div.panel-scrolling-medium {
		min-height: 350px;
  	max-height: 350px;
  	overflow-y: scroll;	
	}

	div.panel-scrolling-origin {
		min-height: 250px;
  	max-height: 250px;
  	overflow-y: scroll;	
	}

	div.panel-scrolling-small {
		min-height: 150px;
  	max-height: 150px;
  	overflow-y: scroll;	
	}

	div.custom-format {
		padding-top: 0;
		padding-left: 20px;
		
		pre {
			border: none;
			background-color: $transparent;
		}
	}

	div#parse-article {
		a {
			color: $medium-alpha-strong;
		}
		a:hover {
			color: $light-alpha-strong;
			text-decoration: none;
		}
	}

	div#comment-heading {
		background-color: $dark-alpha-light;
		color: $pure;
		padding: 8px;
		padding-left: 18px;
	}

	div#comment-heading:hover {
		background-color: $dark-alpha-strong;
	}

/* Footer */

	footer {
		display: block;
		position: absolute;
		bottom: 0;
		margin: 40px;

		a {
		color: $pure;
		}

		a:hover {
			color: $dark;
			text-decoration: none;
		}
	}

}






















